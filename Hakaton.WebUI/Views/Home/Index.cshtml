<style>
.battery {
  border: 3px solid #333;
  width: 180px;
  height: 280px;
  padding: 2px;
  border-radius: 5px;
  position: relative;
  margin: 15px 0;
}

  .battery::before{
    content: '';
    height: 15px;
    width: 55px;
    background: #333;
    display: block;
    position: absolute;
    top: -18px;
    margin-left: 3.5rem;
    border-radius: 4px 4px 0 0;
  }
  .batery::after {
    content: '';
    display: block;
    position: absolute;
    top: -1px;
    left: -1px;
    right: -1px;
    bottom: -1px;
    border: 1px solid #fff;
    border-radius: 2px;
  }

.battery-level {
  background: #30b455;  
  position: absolute;
  bottom: 0px;
  left: 0;
  right: 0;
}

   .warn {
    background-color: #EFAF13;
  }

  .alert {
    background-color: #e81309;
    margin-bottom:0px !important;
  }    
  .centered {
  position: absolute;
  top: 20%;
  font-size:20px;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index:100;
  color:white;
}

.Layer_1{
  max-width: 300px;
  max-height:400px;
}
.Labels{
  font-size: 2px;
}

.weather-information{
